<!--index.wxml-->
<view class="container-home">
  <view class="header">
    <text class="header-txt">50音学习</text>
    <view class="header-progress">
      <view class="progress-start">{{randomNumber}}</view>
      <view class="progress-gap">/</view>
      <view class="progress-end">104个</view>
    </view>
    <view class="progress-box">
      <progress percent="{{randomNumber}}" border-radius="5" stroke-width="6" activeColor="#786DEE" />
    </view>
    <image src="../../images/home/home-pg.png" class='header-img'></image>
  </view>

  <view class="page-btn" bindtap="toStudy">
    <text>开始学习</text>
  </view>

  <view class="page-title">基础学习</view>

  <view class="page-basic">
    <view class="basic-box" bindtap="toMaterial">
      <view class="box-content">
        <view class="content-left">
          <view class="content-title">学习资料</view>
          <view class="content-sub-title">人手一份</view>
        </view>
        <view class="content-right">
          <image src="../../images/home/home-learn.png" class="right-img"></image>
        </view>
      </view>
    </view>

    <view class="basic-box" bindtap="toIntroduction">
      <view class="box-content">
        <view class="content-left">
          <view class="content-title">入门知识</view>
          <view class="content-sub-title">适合小白</view>
        </view>
        <view class="content-right">
          <image src="../../images/home/home-rumen.png" class="right-img"></image>
        </view>
      </view>
    </view>
  </view>

  <view class="page-basic mt-40">
    <view class="basic-box" bindtap="toVocabulary">
      <view class="box-content">
        <view class="content-left">
          <view class="content-title">常用词汇</view>
          <view class="content-sub-title">基础日语</view>
        </view>
        <view class="content-right">
          <image src="../../images/home/home_icon_cihui.png" class="right-img"></image>
        </view>
      </view>
    </view>
 
    <view class="basic-box" bindtap="toTranslate">
      <view class="box-content">
        <view class="content-left">
          <view class="content-title">日语翻译</view>
          <view class="content-sub-title">准确易懂</view>
        </view>
        <view class="content-right">
          <image src="../../images/home/home_icon_fanyi.png" class="right-img"></image>
        </view>
      </view>
    </view>
  </view>

  <view class="page-title page-class">进阶课程</view>

  <view class="content-course">
    <view class="course-item" bindtap="toCourse">
      <image src="../../images/home/home-n1.png" class="item-img"></image>
    </view>
    <view class="course-item" bindtap="toCourse">
      <image src="../../images/home/home-n2.png" class="item-img"></image>
    </view>
    <view class="course-item" bindtap="toCourse">
      <image src="../../images/home/home-n3.png" class="item-img"></image>
    </view>
  </view>
</view>